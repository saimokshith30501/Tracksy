<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SearchResults">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/sr_backArrow"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:layout_width="28dp"
            android:layout_height="28dp">
        </ImageButton>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/sr_tvTitle"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:text="Tracksy"
            android:alpha="0.8"
            android:includeFontPadding="false"
            android:fontFamily="@font/koho_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sr_tvTitle"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/sr_prev"
                android:src="@drawable/ic_prev"
                android:layout_marginRight="4dp"
                android:background="@null"
                android:layout_width="28dp"
                android:layout_height="28dp">
            </ImageButton>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/sr_tvDate"
                android:textSize="16sp"
                android:text="11 mar 2021"
                android:alpha="0.8"
                android:includeFontPadding="false"
                android:fontFamily="@font/koho_semibold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageButton
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/sr_next"
                android:src="@drawable/ic_next"
                android:background="@null"
                android:layout_width="28dp"
                android:layout_height="28dp">
            </ImageButton>
        </LinearLayout>

        <ImageButton
            android:id="@+id/sr_alerts"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_alerts"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_width="28dp"
            android:layout_height="28dp">
        </ImageButton>
        <ImageButton
            android:visibility="gone"
            android:id="@+id/sr_dismissAlerts"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_dismiss"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_width="28dp"
            android:layout_height="28dp">
        </ImageButton>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/sr_llNoData"
        android:gravity="center"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nodata">
        </ImageView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koho_bold"
                android:includeFontPadding="false"
                android:text="Sorry"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koho_bold"
                android:includeFontPadding="false"
                android:text="no slots"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koho_bold"
                android:includeFontPadding="false"
                android:text="Available!"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false">
            <androidx.recyclerview.widget.RecyclerView
                android:paddingBottom="40dp"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:id="@+id/sr_rvCenters"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/centers_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>
</LinearLayout>