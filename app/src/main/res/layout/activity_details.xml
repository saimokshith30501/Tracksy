<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".DetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/sr_backArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/ic_back_arrow"></ImageButton>
        <ImageButton
            android:id="@+id/sr_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            app:tint="@color/black"
            android:src="@drawable/ic_baseline_share_24"></ImageButton>

        <TextView
            android:id="@+id/sr_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:fontFamily="@font/koho_bold"
            android:includeFontPadding="false"
            android:text="Center Details"
            android:textColor="@color/black"
            android:textSize="22sp"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="9dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="9dp"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/available_background"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_main"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/available"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:layout_height="66dp">
                    <ImageView
                        android:id="@+id/iv_fee"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_paid">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_CenterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toLeftOf="@id/ivDirections"
                        android:layout_toRightOf="@id/iv_fee"
                        android:fontFamily="@font/koho_bold"
                        android:includeFontPadding="false"
                        android:maxLength="66"
                        android:maxLines="2"
                        android:text="Yelahanka"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>

                    <ImageView
                        android:id="@+id/ivDirections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_directions"></ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="16dp"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_Vaccine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="COVISHIELD"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"></TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_toLeftOf="@+id/ivVaccine"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:id="@+id/llDoses"
                            android:orientation="vertical"
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/available_background">
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/tv_NoOfDoses"
                                android:text="70"
                                android:textAlignment="gravity"
                                android:layout_gravity="center"
                                android:textAllCaps="true"
                                android:fontFamily="@font/koho_semibold"
                                android:textSize="12sp"
                                android:textColor="@color/available"
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/ivVaccine"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vaccine">
                    </ImageView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="1dp">
                </View>
                <RelativeLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="16dp"
                    android:layout_height="60dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:id="@+id/llRupee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/available_background">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/ivRupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/available"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_rupee"></ImageView>
                            <TextView
                                android:layout_marginLeft="4dp"
                                android:id="@+id/tvFee"
                                android:text="2000"
                                android:textAllCaps="true"
                                android:fontFamily="@font/koho_semibold"
                                android:textSize="12sp"
                                android:textColor="@color/available"
                                android:includeFontPadding="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/ci_tvMinAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:layout_toRightOf="@id/cv_fee"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="Min Age:"
                        android:textAllCaps="true"
                        android:textColor="#888888"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvMinAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ci_tvMinAge"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="15"
                        android:textAllCaps="true"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/ci_tvMaxAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:layout_toRightOf="@id/tvMinAge"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="Max Age:"
                        android:textAllCaps="true"
                        android:textColor="#888888"
                        android:textSize="14sp"></TextView>
                    <TextView
                        android:id="@+id/tv_MaxAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ci_tvMaxAge"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="12"
                        android:textAllCaps="true"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"></TextView>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_All"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_MaxAge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/all"
                        android:layout_centerVertical="true">
                    </ImageView>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="1dp">
                </View>
                <RelativeLayout
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/koho_semibold"
                        android:includeFontPadding="false"
                        android:text="From : 09:00:00"
                        android:textColor="#888888"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/tvDose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/koho_medium"
                        android:includeFontPadding="false"
                        android:text="DOSE 1"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"></TextView>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/tvTo"
                        android:text="To : 17:00:00"
                        android:fontFamily="@font/koho_semibold"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

