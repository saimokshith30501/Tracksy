<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:cardCornerRadius="30dp"
    app:behavior_hideable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSheetPointer"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardElevation="0dp"
            android:layout_marginTop="10dp"
           android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="4dp">
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/backArrow"
            android:layout_below="@id/bottomSheetPointer"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:layout_width="28dp"
            android:layout_height="28dp">
        </ImageButton>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:text="Tracksy"
            android:includeFontPadding="false"
            android:fontFamily="@font/koho_bold"
            android:textColor="@color/black"
            android:layout_below="@id/bottomSheetPointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:paddingBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/title"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EFEFEF"
                android:layout_height="36dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_pincode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_height="36dp">
                        <TextView
                            android:id="@+id/tv_pincode"
                            android:text="Search by pin"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/koho_regular"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_district"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/sliderBackground"
                        android:layout_height="36dp">
                        <TextView
                            android:id="@+id/tv_district"
                            android:text="Search by district"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/koho_regular"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </TextView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sbs_tilPinCode"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:hint="Enter Pin Code"
                app:hintTextColor="@color/colorPrimaryDark"
                android:textColorHint="@color/hintColour"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="5dp"
                app:boxStrokeColor="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/hintColour"
                app:boxStrokeWidthFocused="2dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/hintColour"
                    android:fontFamily="@font/koho_medium"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textCursorDrawable="@null"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sbs_tilDate"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:hint="Date"
                app:hintTextColor="@color/colorPrimaryDark"
                android:textColorHint="@color/hintColour"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="5dp"
                app:boxStrokeColor="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/hintColour"
                app:boxStrokeWidthFocused="2dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/hintColour"
                    android:fontFamily="@font/koho_medium"
                    android:inputType="date"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:editable="false"
                    android:clickable="true"
                    android:maxLength="20"
                    android:focusable="false"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:textCursorDrawable="@null"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koho_regular"
                android:includeFontPadding="false"
                android:paddingLeft="5dp"
                android:text="Age Group"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textSize="12sp" />
            <RadioGroup
                android:id="@+id/sbs_rgAgeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/sbs_rb18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:includeFontPadding="false"
                    android:text="18-45"
                    android:checked="true"
                    android:tag="18"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.8"
                    android:fontFamily="@font/koho_regular">
                </RadioButton>
                <RadioButton
                    android:id="@+id/sbs_rb45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginLeft="60dp"
                    android:includeFontPadding="false"
                    android:text="45+"
                    android:tag="45"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:alpha="0.8"
                    android:fontFamily="@font/koho_regular">
                </RadioButton>
            </RadioGroup>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/koho_regular"
                    android:includeFontPadding="false"
                    android:paddingLeft="5dp"
                    android:text="Dose"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp" />
                <RadioGroup
                    android:id="@+id/sbs_rgDose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/sbs_rbDose1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:includeFontPadding="false"
                        android:text="Dose 1"
                        android:checked="true"
                        android:tag="1"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.8"
                        android:fontFamily="@font/koho_regular">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/sbs_rbDose2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:layout_marginLeft="60dp"
                        android:includeFontPadding="false"
                        android:text="Dose 2"
                        android:tag="2"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.8"
                        android:fontFamily="@font/koho_regular">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                style="@style/AppThemee"
                android:id="@+id/sbs_btCheck"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                android:background="@drawable/button_back_register_homescreen"
                android:fontFamily="@font/koho_bold"
                android:text="Check"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:transitionName="trans1"></com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>