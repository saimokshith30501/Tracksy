<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.tracksy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppTracksy"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Certificate"
            android:theme="@style/AppThemee"></activity>
        <activity android:name=".SearchResults" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/AppThemee" />
        <activity
            android:name=".HomeScreen"
            android:theme="@style/AppThemee" />
        <activity
            android:name=".VerifyOTP"
            android:theme="@style/AppThemee" />
        <activity
            android:name=".SignUp"
            android:theme="@style/AppThemee" />
        <activity
            android:name=".LogIn"
            android:theme="@style/AppThemee" />
        <activity android:name=".LoginOrSignUp" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FMS"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>